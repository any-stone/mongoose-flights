<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/forms.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <select name="airline" id="airline-input">
      <option value="Choose">Choose an airline</option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select name="airport" id="airport-input">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNum">Flight Number:</label>
    <input type="text" name="flightNum" id="flightNum-input" min="10" max="9999" required>
    <label for="departs">Departs:</label>
    <input type="datetime-local" name="departs" value="<%= departsDate %>" id="departs-input">    
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include('../partials/footer') %>